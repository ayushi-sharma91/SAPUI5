<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Popover title="{ProductId}" class="sapUiPopupWithPadding" placement="Right" initialFocus="action">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Close" press="handleActionPress"/>
			</Toolbar>
		</footer>
		<f:SimpleForm editable="false">
			<f:content>
				<core:Title text="{i18n>shipperDetails}"/>
				<Label text="{i18n>shipperID}"></Label>
				<Text text="{ShipperID}"/>
				<Label text="{i18n>companyName}"/>
				<Text text="{CompanyName}"/>
				<Label text="{i18n>phone}"/>
				<Text text="{Phone}"/>
				
			
			</f:content>
		</f:SimpleForm>
	</Popover>
</core:FragmentDefinition>