<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Popover title="{ProductId}" class="sapUiPopupWithPadding" placement="Right" initialFocus="action">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Close" press="handleActionPress"/>
			</Toolbar>
		</footer>
		<f:SimpleForm editable="false">
			<f:content>
				<core:Title text="{i18n>customerDetails}"/>
				<Label text="Customer ID"></Label>
				<Text text="{CustomerID}"/>
				<Label text="Company Name"/>
				<Text text="{CompanyName}"/>
				<Label text="Contact Name"/>
				<Text text="{ContactName}"/>
				<Label text="Contact Title"/>
				<Text text="{ContactTitle}"/>
				<Label text="Address"/>
				<Text text="{Address}"/>
				<Label text="City"/>
				<Text text="{City}"/>
				<Label text="Region"/>
				<Text text="{Region}"/>
				<Label text="Postal Code"/>
				<Text text="{PostalCode}"/>
				<Label text="Country"/>
				<Text text="{Country}"/>
				<Label text="Phone"></Label>
				<Text text="{Phone}"/>
				<Label text="Fax"></Label>
				<Text text="{Fax}"/>
			
			</f:content>
		</f:SimpleForm>
	</Popover>
</core:FragmentDefinition>