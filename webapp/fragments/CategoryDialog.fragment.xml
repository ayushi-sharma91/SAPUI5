<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Popover title="{ProductId}" class="sapUiPopupWithPadding" placement="Right" initialFocus="action">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="action" text="Close" press="handleActionPress"/>
			</Toolbar>
		</footer>
		<Title text="{i18n>categoryInformation}"/>
		<f:SimpleForm editable="false">
			<f:content>
				<Label text="{i18n>categoryID}"></Label>
				<Text text="{CategoryID}"/>
				<Label text="{i18n>categoryName}"/>
				<Text text="{CategoryName}"/>
				<Label text="{i18n>description}"/>
				<Text text="{Description}"/>
			
			</f:content>
		</f:SimpleForm>
	</Popover>
</core:FragmentDefinition>