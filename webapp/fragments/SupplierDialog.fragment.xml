<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Popover title="{ProductId}" class="sapUiPopupWithPadding" placement="Right" initialFocus="action">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Close" press="handleActionPress"/>
			</Toolbar>
		</footer>
		
		<f:SimpleForm editable="false">
			<f:content>
				<core:Title text="{i18n>supplierDetails}"/>
				<Label text="{i18n>supplierId}"></Label>
				<Text text="{SupplierID}"/>
				<Label text="{i18n>companyName}"/>
				<Text text="{CompanyName}"/>
				<Label text="{i18n>contactName}"/>
				<Text text="{ContactName}"/>
				<Label text="{i18n>contactTitle}"/>
				<Text text="{ContactTitle}"/>
				<Label text="{i18n>address}"/>
				<Text text="{Address}"/>
				<Label text="{i18n>city}"/>
				<Text text="{City}"/>
				<Label text="{i18n>region}"/>
				<Text text="{Region}"/>
				<Label text="{i18n>postalCode}"/>
				<Text text="{PostalCode}"/>
				<Label text="{i18n>country}"/>
				<Text text="{Country}"/>
				<Label text="{i18n>phone}"></Label>
				<Text text="{Phone}"/>
				<Label text="{i18n>fax}"></Label>
				<Text text="{Fax}"/>
			
			</f:content>
		</f:SimpleForm>
	</Popover>
</core:FragmentDefinition>